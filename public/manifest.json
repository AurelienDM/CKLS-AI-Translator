{
  "manifest_version": 3,
  "name": "AI Translator - CKLS Translation Tool",
  "version": "2.20251208",
  "description": "Professional translation tool for CKLS content with AI-powered translation and Excel formula generation",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "downloads",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://translation.googleapis.com/*",
    "https://api.cognitive.microsofttranslator.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*path_email_rules.php*",
        "*://*/*manage_translations.php*",
        "*://*/*training_manage_translations.php*",
        "*://*/administration/training/guided/*/translations*",
        "*://*/administration/training/guided/session/*/translations*",
        "*://meta-skills.io/dashboard/trainings/*/editor*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Translator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}

